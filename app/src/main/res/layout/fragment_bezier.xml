<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="一段三阶贝塞尔曲线，拟合 1/4 圆" />

    <com.dafay.demo.robot.ui.view.test.CubicBezierView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:background="#8000ffff" />


    <Space
        android:layout_width="match_parent"
        android:layout_height="36dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="四段三阶贝塞尔曲线，拟合圆" />

    <com.dafay.demo.robot.ui.view.test.CircleBezierView
        android:id="@+id/cbv_circle_bezier"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:background="#8000ffff" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_start_anim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="变化到心形" />

</LinearLayout>